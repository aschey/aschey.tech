---
import "../styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<script>
  import { imageIndex } from "../scripts/image.ts";
  const setIndex = (index: number) => {
    imageIndex.set(index);
  };
  for (const [i, value] of Array.from(
    document.getElementsByClassName("lightbox-img"),
  ).entries()) {
    value.addEventListener("click", () => setIndex(i));
  }
</script>

<html lang="en">
  <head>
    <BaseHead
      title={title ?? "Austin Schey"}
      description={description ?? "Austin Schey's personal site"}
    />
  </head>
  <body class="text-primary bg-background">
    <Navbar />
    <slot />
  </body>
</html>
