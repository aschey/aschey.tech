---
interface Props {
  classList: string[];
}
const { classList } = Astro.props;

import { twMerge } from "tailwind-merge";
---

<div
  class={twMerge([
    "bg-background",
    "dark:bg-dark-background",
    "border-border-muted",
    "dark:border-dark-border-muted",
    "border-4",
    "shadow-card",
    "rounded-md",
    ...classList,
  ])}
>
  <slot />
</div>
